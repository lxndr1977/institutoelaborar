---
const MISSION_VISION_DATA = [
  {
    title: "Missão",
    content: "Promover saúde integral para e com mulheres em vulnerabilidade social, fomentar práticas educacionais cidadãs e ações para equidade e inclusão nas organizações do trabalho."
  },
  {
    title: "Visão",
    content: "Gerar transformações concretas e mensuráveis em saúde integral, equidade e inclusão em comunidades e organizações, nas diferentes regiões do Brasil."
  }
];

const VALUES_DATA = [
  {
    title: "Equidade",
    description: "De maneira interseccional, para diversidade, inclusão e pertencimento.",
    titleClass: "text-primary-900"
  },
  {
    title: "Saúde Integral",
    description: "Promoção da saúde atrelada às dimensões sociais.",
    titleClass: "text-foreground-950"
  },
  {
    title: "Educação Humanitária",
    description: "Comprometida com a realidade social e a cidadania.",
    titleClass: "text-foreground-950"
  },
  {
    title: "Emancipação",
    description: "Atuação coletiva para gerar autonomia, confiança e segurança.",
    titleClass: "text-foreground-950"
  }
];

const SECTION_CONFIG = {
  missionVision: {
    bannerImage: "banner.svg",
    bannerAlt: "Banner Missão e Visão - Instituto Elaborar",
    objectPosition: "object-left md:object-center",
    textColor: "text-tertiary-50",
    padding: "py-20 lg:py-20"
  },
  values: {
    bannerImage: "banner2.svg", 
    bannerAlt: "Banner Valores - Instituto Elaborar",
    objectPosition: "object-left md:object-right",
    titleColor: "text-primary-950",
    padding: "py-20 lg:py-18"
  }
};

const baseUrl = import.meta.env.BASE_URL;
---

<section class="w-full mx-auto text-tertiary-50 relative px-4 sm:px-6 lg:px-8 py-20" data-aos="fade-up">
  <section class={`max-w-7xl mx-auto relative px-8 ${SECTION_CONFIG.missionVision.padding}`}>
    <img 
      src={`${baseUrl}${SECTION_CONFIG.missionVision.bannerImage}`}
      alt={SECTION_CONFIG.missionVision.bannerAlt}
      class={`absolute inset-0 w-full h-full object-cover rounded-3xl -z-10 ${SECTION_CONFIG.missionVision.objectPosition}`}
    />
    
    <div class="max-w-5xl grid grid-cols-1 lg:grid-cols-2 gap-28 mx-auto">
      {MISSION_VISION_DATA.map((item) => (
        <div>
          <h3 class={`text-2xl font-medium tracking-tighter ${SECTION_CONFIG.missionVision.textColor} mb-3`}>
            {item.title}
          </h3>
          <p class={`${SECTION_CONFIG.missionVision.textColor} leading-relaxed`}>
            {item.content}
          </p>
        </div>
      ))}
    </div>
  </section>
</section>

<section class="w-full mx-auto text-tertiary-50 relative px-4 sm:px-6 lg:px-8" data-aos="fade-up">
  <section class={`max-w-7xl mx-auto relative px-8 ${SECTION_CONFIG.values.padding}`}>
    <img 
      src={`${baseUrl}${SECTION_CONFIG.values.bannerImage}`}
      alt={SECTION_CONFIG.values.bannerAlt}
      class={`absolute inset-0 w-full h-full object-cover rounded-3xl -z-10 ${SECTION_CONFIG.values.objectPosition}`}
    />
    
    <div class="max-w-5xl mx-auto">
      <div class="mb-8">
        <h3 class={`text-2xl font-medium tracking-tighter ${SECTION_CONFIG.values.titleColor}`}>
          Valores
        </h3>
      </div>
      
      <div class="max-w-5xl grid grid-cols-1 md:grid-cols-2 gap-4 mx-auto">
        {VALUES_DATA.map((value) => (
          <div>
            <h4 class={`text-lg font-medium ${value.titleClass} mb-1`}>
              {value.title}
            </h4>
            <p class="text-primary-900 leading-relaxed">
              {value.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>
</section>