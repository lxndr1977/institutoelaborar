---
import { Image } from 'astro:assets';

import imgRenata from '../assets/images/team/renata-andreoni.jpg';
import imgMadalena from '../assets/images/team/magdalena-cortese.jpg';
import imgNeoma from '../assets/images/team/neoma-mendes.jpg';
import imgJose from '../assets/images/team/jose-lucio.jpg';

const members = [
  {
    initials: "AM",
    name: "Renata Andreoni",
    img: imgRenata,
    position: "Fundadora e Presidente",
    function: "Doutora em Comunicação, Historiadora, Educadora",
    socialLink: "https://linkedin.com/in/renataandreoni",
    delay: 0,
  },
  {
    initials: "CS",
    name: "Neoma Mendes de Assis",
    img: imgNeoma,
    position: "Fundadora e Vice-Presidente",
    function: "Médica, Especialista em Medicina de Família e Comunidade, Educadora",
    socialLink: "https://linkedin.com/in/neoma-mendes-8943551a8",
    delay: 100,
  },
  {
    initials: "MR",
    name: "Magdalena Cortese Coelho ",
    img: imgMadalena,
    position: "Fundadora e Diretora de Operações",
    function: "Doutora em Administração, Especialista em Estudos de Gênero, Educadora",
    socialLink: "https://linkedin.com/in/magdalenacortesecoelho",
    delay: 200,
  },
  {
    initials: "PL",
    name: "José Lúcio Machado",
    img: imgJose,
    position: "Conselheiro Consultivo",
    function: "Médico, Doutor em Cirurgia, Gestor na Educação Médica e Educador",
    socialLink: "https://linkedin.com/in/jos%C3%A9-l%C3%BAcio-martins-machado",
    delay: 300,
  },
];
---

<section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-28">
    <div class="text-center mb-16">
        <h2 class="text-4xl lg:text-5xl font-medium tracking-tighter text-secondary-600 mb-4">
            Conselho de
            <span class="text-primary-600">Administração e Consultivo</span>
        </h2>
    </div>
    
    <div class="relative grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 space-y-12 sm:space-y-0">
        {members.map(member => (
            <div class="text-center " data-aos="fade-up" data-aos-delay={member.delay}>
              <div class="transition transition-transform duration-300 ease-in-out hover:-translate-y-2">
                <div class="mb-6 ">
                  <a href={member.socialLink} target="_blank" class="hover:mouse-pointer">
                    <Image 
                      src={member.img} alt={`Foto de ${member.name}`} width
                      class="w-100 h-auto rounded-lg" 
                      widths={[200, 350, 500, 630]}
                      format="webp"
                      sizes="(max-width: 640px) 200px, (max-width: 1024px) 350px, 500px"
                      width="630"
                      height="678" />
                  </a>
                </div>
                <h3 class="text-lg font-medium text-primary-600 mb-1">{member.name}</h3>
                <p class="text-foreground-950 font-medium text-sm mb-2">{member.position}</p>
                <p class="text-foreground-950 text-sm mb-4 leading-relaxed">{member.function}</p>
                <div class="flex justify-center">
                    <a href={member.socialLink} 
                       target="_blank" 
                       class="text-primary-800 hover:text-primary-600 transition-colors duration-200"
                       aria-label={`Perfil do LinkedIn de ${member.name}`}>
                        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                        </svg>
                    </a>
                </div>
            </div>
            </div>
        ))}
    </div>
</section>
